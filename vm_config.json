{
  "hostname": "dev-vm",
  "dbuser": "root",
  "dbpasswd": "password",
  "databases": [
    "development",
    "testing"
  ],
  "sites": [
    {
      "hostname": "app.local",
      "document_root": "/vagrant/public"
    }
  ],
  "php_configs": [
    {
      "option": "upload_max_filesize",
      "value": "100M"
    },
    {
      "option": "post_max_size",
      "value": "100M"
    }
  ],
  "boost_pam_limits": "yes",
  "boosted_pam_limit": 40000,
  "install_redis": "yes",
  "install_db": "yes",
  "install_postgresql": "no",
  "postgresql_version": "11",
  "install_nginx": "yes",
  "install_php": "yes",
  "php_version": "7.4",
  "install_javascript_build_system": "yes",
  "node_major_version": "10",
  "enable_swap": "yes",
  "swap_size_in_mb": "1024",
  "install_smenu": "yes"
}